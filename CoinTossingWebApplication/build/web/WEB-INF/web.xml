<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CreateUserServlet</servlet-name>
        <servlet-class>za.ac.tut.web.CreateUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComputerTossServlet</servlet-name>
        <servlet-class>za.ac.tut.web.ComputerTossServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserTossServlet</servlet-name>
        <servlet-class>za.ac.tut.web.UserTossServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StoreInDatabaseServlet</servlet-name>
        <servlet-class>za.ac.tut.web.StoreInDatabaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserServlet</servlet-name>
        <url-pattern>/CreateUserServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComputerTossServlet</servlet-name>
        <url-pattern>/ComputerTossServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserTossServlet</servlet-name>
        <url-pattern>/UserTossServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StoreInDatabaseServlet</servlet-name>
        <url-pattern>/StoreInDatabaseServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
